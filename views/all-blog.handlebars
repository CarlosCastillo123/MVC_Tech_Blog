{{#each blogs}}
<div class="container">
    <h2>
        <a href="/blog/{{id}}">{{title}}</a>
    </h2>
    <p>
        {{description}}
    </p>
    <p>
        Posted by {{user.username}} on {{format_date date_created}}
    </p>
    
    {{#if logged_in}}
   <form id="comment">
    <textarea  id="comment-box" cols="30" rows="10">
    </textarea>
    <button type="submit" id="comment">Comment</button>
    </form>

    {{/if}}
</div>
{{/each}}
<script src="/js/profile.js"></script>
<script src="/js/edit.js"></script>
<script src="/js/logout.js"></script>