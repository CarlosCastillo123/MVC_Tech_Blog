<div class="card" style="width 18rem;">
    <div class="card-body">
    <h2 class="card-title">
        <a href="/blogs/{{id}}">{{title}}</a>
    </h2>
    <p class="card-text">
        {{description}}
    </p>
    <p class="card-text">
        Posted by {{user.username}} on {{format_date date_created}}
    </p>
    
   </div>
</div>  

   <form class="card-text" id="comment-form">
    <textarea class="form-control"  id="comment-box" cols="10" rows="4">
    </textarea>
    <button type="submit" id="comment">Comment</button>
    </form>
    {{log comments}}
{{#each comments as |comment|}}
 <div class=" card text-centered">
      <p>{{comment.description}}</p>
      <p>Created by {{comment.user.username}} on {{format_date date_created}}</p>
  </div>
{{/each}}
  
    
<script src="/js/comment.js"></script>

<script src="/js/logout"></script>